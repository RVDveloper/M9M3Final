@model PRJ_FINAL_MP09_MP03.Models.ForgetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer contrase単a";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Restablecer contrase単a</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/ForgetPassword.css" rel="stylesheet" />
</head>
<body>
    <div id="particles-js" class="particles"></div>
    <div class="login-container">
        <div class="login-box shadow">
            <h2 class="text-center mb-4">Restablecer contrase単a</h2>
            <form asp-action="ForgetPassword" method="post" class="apple-form">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="VerificationCode" />
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Cambiar contrase単a</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/Account/Login" class="btn btn-outline-light position-absolute top-0 start-0 m-3" style="z-index:1000;">
        <i class="fa fa-arrow-left"></i> Volver al login
    </a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script src="~/js/particles-config.js"></script>
</body>
</html>
