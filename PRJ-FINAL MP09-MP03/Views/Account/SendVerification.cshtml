@{
    ViewData["Title"] = "Enviar código de verificación";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Enviar código</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div id="particles-js" class="particles"></div>
    <a href="/Account/Login" class="btn btn-outline-light position-absolute top-0 start-0 m-3" style="z-index:1000;">
        <i class="fa fa-arrow-left"></i> Volver al login
    </a>
    <div class="login-container">
        <div class="login-box shadow">
            <h2 class="text-center mb-4">Recuperar contraseña</h2>
            <form asp-action="SendVerification" method="post" novalidate>
                <div class="user-box">
                    <input type="email" class="form-control" name="email" required placeholder=" " />
                    <label for="email">Correo electrónico</label>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Enviar código</button>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary-errors mt-3">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script src="~/js/particles-config.js"></script>
</body>
</html>

