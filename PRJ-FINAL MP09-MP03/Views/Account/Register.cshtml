@model PRJ_FINAL_MP09_MP03.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Registrarse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div id="particles-js" class="particles"></div>
    <div class="login-container">
        <div class="login-box shadow">
            <h2 class="text-center mb-4">Registrarse</h2>

            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

                <form asp-action="Register" method="post">
                    <div class="user-box">
                        <input asp-for="Username" class="form-control" placeholder=" " />
                        <label asp-for="Username">Usuario</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="user-box">
                        
                        <input asp-for="Email" class="form-control" placeholder=" " />
                        <label asp-for="Email">Correo</label>
                        <span asp-validation-for="Email" class="custom-error"></span>

                    </div>
                    <div class="user-box">
                        
                        <input asp-for="Password" class="form-control" type="password" placeholder=" " />
                        <label asp-for="Password">Contraseña</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="user-box">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder=" " />
                        <label asp-for="ConfirmPassword">Confirmar contraseña</label>

                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    </div>
                </form>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script src="~/js/particles-config.js"></script>
</body>
</html>
