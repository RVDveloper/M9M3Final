@model PRJ_FINAL_MP09_MP03.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Iniciar sesión</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Estilo personalizado -->
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <!-- Fondo de partículas -->
    <div id="particles-js" class="particles"></div>

    <div class="login-container">
        <div class="login-box shadow">
            <h2 class="text-center mb-4">Iniciar sesión</h2>

            <div asp-validation-summary="All" class="validation-summary-errors"></div>


            <form asp-action="Login" method="post" novalidate>
                <div class="user-box">
                    <input asp-for="Username" class="form-control" placeholder=" " />
                    <label asp-for="Username">Usuario</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="user-box">
                    <input asp-for="Password" type="password" class="form-control" placeholder=" " />
                    <label asp-for="Password">Contraseña</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-link">¿No tienes cuenta? Registrarte</a>
                </div>
                <div class="text-center mt-3">
                    <a href="@Url.Action("ForgetPassword", "Account")" class="btn btn-link">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script src="~/js/particles-config.js"></script>

    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const errorSummary = document.querySelector(".validation-summary-errors");
        if (errorSummary && errorSummary.innerText.trim() === "") {
            errorSummary.style.display = "none";
        }
    });
    </script>

</body>
</html>
